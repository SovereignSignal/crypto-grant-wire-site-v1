# =============================================================================
# CryptoGrantWire Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# =============================================================================
# DATABASE (Required)
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/cryptograntwire

# =============================================================================
# SERVER (Optional - defaults provided)
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Environment mode
NODE_ENV=development

# =============================================================================
# AUTHENTICATION (Optional - for admin features)
# =============================================================================

# JWT secret for session cookies
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# OAuth server URL for authentication
OAUTH_SERVER_URL=

# Admin user's Open ID (grants admin role automatically)
OWNER_OPEN_ID=

# =============================================================================
# NOTION SYNC (Optional - for legacy grant entries)
# =============================================================================

# Notion API integration token
# Create at: https://www.notion.so/my-integrations
NOTION_API_KEY=

# Notion database ID to sync from
# Found in the URL: notion.so/{workspace}/{database_id}
NOTION_DATABASE_ID=

# =============================================================================
# FORGE API (Optional - for external integrations)
# =============================================================================

# Built-in Forge API URL
BUILT_IN_FORGE_API_URL=

# Built-in Forge API key
BUILT_IN_FORGE_API_KEY=

# =============================================================================
# ANALYTICS (Optional - for Umami analytics)
# =============================================================================

# Umami analytics endpoint
VITE_ANALYTICS_ENDPOINT=

# Umami website ID
VITE_ANALYTICS_WEBSITE_ID=

# =============================================================================
# CLIENT (Optional)
# =============================================================================

# Application ID for client identification
VITE_APP_ID=
